{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@components": ["components/index"],
      "@components/*": ["components/*"],
      "@screens/*": ["screens/*"],
      "@helpers": ["helpers"],
      "@constants": ["constants"],
      "@services": ["services"],
      "@sharedTypes": ["../shared/types/index.ts"],
      "@contexts": ["contexts"],
      "@navigation": ["navigation"],
      "@assets": ["assets"],
      "@hooks": ["hooks"],
      "@reactquery": ["reactquery"],
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "../shared/**/*.ts",
  ]
}
