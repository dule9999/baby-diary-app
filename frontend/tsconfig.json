{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@components": ["components/index"],
      "@components/*": ["components/*"],
      "@screens/*": ["screens/*"],
      "@helpers": ["helpers"],
      "@types": ["types"],
      "@constants": ["constants"],
      "@services": ["services"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx"
  ]
}
